{
  "packages": [
    "./ui/*",
    "./app"
  ],
  "useWorkspaces": true,
  "useNx": false,
  "npmClient": "npm",
  "command": {
    "version": {
      "exact": true,
      "conventionalCommits": true,
      "message": "chore(release): publish"
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "npmClient": "npm",
      "ignoreChanges": [
        "**/stories/**",
        "**/tests/**",
        "*.stories.ts",
        "*.test.ts",
        "*.spec.ts",
        "**/__snapshots__/**",
        "app/**/*",
        "docs/**/*",
        ".storybook/**/*",
        ".zeplin",
        "scripts/**/*",
        ".github/**/*"
      ],
      "registry": "https://registry.npmjs.org/"
    }
  },
  "version": "0.11.0-experimental.0"
}
